	public boolean One_to_5() {
		
		
		System.out.println("Choose a number between 0 and 5: ");
		int number=1;
		do{
			try{// try and catch to let the user enter a number
					number=input.nextInt();
						if (number<0 || number>5)//if the user entered a wrong number
							{
								System.out.println("Please enter a number between 0 and 5");
							}
		
		}	catch(InputMismatchException e) //if the user didn't enter a number
		{
				System.out.println("Enter a number between 0 and 5");
				number=100;
				
		}input.nextLine();
		
		}while(number<0 || number>5);// end of do while loop
	
		
		
		Random rand=new Random();
		
		int randomnumber=rand.nextInt(5);
		
		if (counter<3 && randomnumber==number){
			randomnumber=rand.nextInt(5);
		}
		if (counter<3 && randomnumber==number){
			randomnumber=rand.nextInt(5);
		}
		if (counter<3 && randomnumber==number){
			randomnumber=rand.nextInt(5);
		}
		
		counter++;
		System.out.println("The number is :"+randomnumber);
	
		if (number==randomnumber)
		{
			return true;
		}
		else return false;
		
	
	}

}
